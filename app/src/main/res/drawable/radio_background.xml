<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked State -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color when checked -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Border color -->
            <corners android:radius="12dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Unchecked State -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#F8F8F8"/> <!-- Background color when unchecked -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Border color -->
            <corners android:radius="12dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</selector>